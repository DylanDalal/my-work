<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManager2.MainPage">
    <ContentPage.Content>
        <StackLayout Padding="50" Spacing="5" HorizontalOptions="Center"
                     x:Name="MainStack">
            <Label x:Name="TM"
               Text="Task Manager"
               FontSize="Large"/>
            <Button Text="Create" Clicked="OnPushedGoToCreate"/>
            <Button Text="Delete" Clicked="OnPushedGoToDelete" 
                    x:Name="DeleteButton"/>
            <Button Text="Edit" Clicked="OnPushedGoToEdit"
                    x:Name="EditButton"/>
            <Button Text="Complete" Clicked="OnPushedGoToComplete"
                    x:Name="CompleteButton"/>
            <Button Text="List" Clicked="OnPushedGoToList"
                    x:Name="ListButton"/>
            <StackLayout Orientation="Horizontal">
                <Button Text="Save List" Clicked="OnPushedSaveList"
                        x:Name="SaveButton"/>
                <Button Text="Load List" Clicked="OnPushedLoadList"
                        x:Name="LoadButton"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
