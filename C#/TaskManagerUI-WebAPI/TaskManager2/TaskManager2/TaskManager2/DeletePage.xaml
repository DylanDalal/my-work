<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManager2.DeletePage">
    <ContentPage.Content>
        <StackLayout x:Name="DStack" Padding="50" Spacing="0" HorizontalOptions="Center">
            <Label Text="Enter the name of the item you would like to delete:"/>
            <Entry x:Name="IName" Placeholder="Name..." PlaceholderColor="LightGray"/>
            <Button Text="Enter" Clicked="OnPushedDeleteTask"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>